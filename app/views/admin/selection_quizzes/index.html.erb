<%= link_to '認証済のみ' ,admin_selection_quizzes_path(sort: 0), class: "ml-3 text-dark" %>
<%= link_to '未認証のみ' ,admin_selection_quizzes_path(sort: 1), class: "text-dark"  %>
<%= link_to '全表示' ,admin_selection_quizzes_path, class: "text-dark" %>
<table class="table">
  <thead>
    <th>ID</th>
    <th>作者</th>
    <th>問題文</th>
    <th>回数</th>
    <th>ステータス</th>
  </thead>
  <tbody>
    <% @quizzes.each do |quiz| %>
      <tr>
        <td><%= link_to admin_selection_quiz_path(quiz) do %><%= quiz.id %><% end %></td>
        <td><%= quiz.user.name %></td>
        <td><%= quiz.content.truncate(10) %></td>
        <td><%= quiz.solved_times %></td>
        <td><%= quiz.status_i18n %></td>
      </tr>
    <% end %>
  </tbody>
</table>
