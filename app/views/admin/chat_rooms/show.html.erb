<% @chats.each do |chat| %>
  <div>
    <%= chat.user.name %> <%= chat.content %>
  </div>
<% end %>

<%= form_with model: @chat, url: admin_chat_room_chats_path(@chat_room), local: true do |f| %>
  <%= f.text_field :content %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.submit %>
<% end %>