<div class="row">
  <div class="col-xl-3 col-lg-2 col-md-1"></div>
  <div class="col-xl-6 col-lg-8 col-md-10 quiz-area">
    <%= form_with model: @quiz, url: quiz_path(@quiz), local: true do |f| %>
      <h4 class="yusei-magic pl-3 pt-3">問題文</h4>
      <%= f.text_area :content, class: "form-control quiz-content-textarea" %>
      <%= render 'layouts/error_messages', obj: @quiz, column: :content %>
      <h4 class="yusei-magic pl-3 pt-3">選択肢</h4>
      <% @choices.each do |choice| %>
        <%= f.fields_for choice do |i| %>
          <div class="d-flex choice_input">
            <%= i.hidden_field :choice_id ,name: "quiz[choice_id][]",  :value => choice.id %>
            <%= i.check_box :is_answer ,{multiple: true, class: "mx-2 my-auto"} %>
            <%= i.text_field :content, name: "quiz[choices][]", class: "form-control target m-1" ,:placeholder => "選択肢" %>
            <% if @quiz.user == current_user %>
              <%= link_to "×", quiz_choice_path(@quiz, choice), method: :delete %>
            <% end %>
          </div>
        <% end %>
      <% end %>
      <%= link_to '新規質問投稿', new_quiz_choice_path(@quiz), class: "btn btn-light", remote: true %>
      <h4 class="yusei-magic pl-3 pt-3">解説</h4>
      <%= f.text_area :explanation, class: "form-control quiz-explaination-textarea" %>
      <%= render 'layouts/error_messages', obj: @quiz, column: :explanation%>
      <%= f.submit '保存', class: "btn btn-light" %>
    <% end %>
    <div id="output"></div>
  </div>
  <div class="col-xl-3 col-lg-2 col-md-1"></div>
</div>



