<div class="modal-area">
  <div class="container">
    <div class="row">
      <div class="col-xl-3 col-lg-2 col-md-1"></div>
      <div class="col-xl-6 col-lg-8 col-md-10">
        <div class='background'></div>
        <div class='content'>
          <a href='' class='close-btn'>×</a>
          <%= form_with model: choice, url: selection_quiz_choices_path(quiz), remote: true do |f| %>
            <%= f.hidden_field :is_answer, :value => false %>
            <%= f.hidden_field :selection_quiz_id %>
            <%= f.text_field :content, class: "form-control content-edit m-1" ,:placeholder => "新しい選択肢" %>
            <div class="content-error_messages"> </div>
            <%= f.submit '保存', class: "btn btn-light"%>
          <% end %>
        </div>
      </div>
      <div class="col-xl-3 col-lg-2 col-md-1"></div>
    </div>
  </div>
</div>